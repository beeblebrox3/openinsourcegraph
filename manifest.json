{
  "manifest_version": 2,

  "name": "Open in Sourcegraph",
  "description": "This extension open the current github project on Sourcegraph",
  "version": "1.0",

  "permissions": [
    "activeTab",
    "http://github.com/",
    "https://github.com/"
  ],

  "background": {
      "scripts": ["background.js"],
      "persistent": false
  },

  "browser_action": {
      "default_icon": "sourcegraph.png",
      "default_title": "Open in Sourcegraph"
  }
}